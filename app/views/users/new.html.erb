<h1>Register</h1>

<% if @user %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(User.new) do |f| %>
  Username <%= f.text_field :username %>
  Email <%= f.text_field :email %>
  Password <%= f.text_field :password %>
  <%= f.submit %>
<% end %>